@{
    ViewData["Title"] = "F1 Teams";
}

<
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>F1 Teams 2024</title>
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <div class="team-container">
        <div class="team">
            <div class="team-header">
                <h1>McLaren</h1>
                <span class="points">608 PTS</span>
            </div>
            <div class="team-body">
                <div class="drivers">
                    <p>Lando NORRIS</p>
                </div>
                <div class="drivers">
                    <p>Oscar PIASTRI</p>
                </div>
                <img src="mclaren-car.jpg" alt="McLaren Car" class="team-car">
            </div>
        </div>

        <div class="team">
            <div class="team-header">
                <h1>Ferrari</h1>
                <span class="points">584 PTS</span>
            </div>
            <div class="team-body">
                <div class="drivers">
                    <img src="driver3.jpg" alt="Charles Leclerc" class="driver-img">
                    <p>Charles LECLERC</p>
                </div>
                <div class="drivers">
                    <img src="driver4.jpg" alt="Carlos Sainz" class="driver-img">
                    <p>Carlos SAINZ</p>
                </div>
                <img src="ferrari-car.jpg" alt="Ferrari Car" class="team-car">
            </div>
        </div>

        <!-- Add more teams as needed -->
    </div>
</body>
</html>

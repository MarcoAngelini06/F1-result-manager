@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formula 1 Clone</title>
    <link rel="stylesheet" href="~/css/LandingPage.css">
</head>
<body>
   

    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-content">
            <h1>Excitement Starts Here</h1>
            <p>Experience the thrill of Formula 1.</p>
            <button>Learn More</button>
        </div>
    </section>

    <!-- News Section -->
    <section class="news">
        <h2>Latest News</h2>
        <div class="news-grid">
            <div class="news-item">
                <img src="https://via.placeholder.com/300" alt="News Image">
                <h3>Race Highlights</h3>
                <p>Catch up on the latest action from the track.</p>
            </div>
            <div class="news-item">
                <img src="https://via.placeholder.com/300" alt="News Image">
                <h3>Driver Spotlight</h3>
                <p>Get to know your favorite drivers better.</p>
            </div>
            <div class="news-item">
                <img src="https://via.placeholder.com/300" alt="News Image">
                <h3>Team Insights</h3>
                <p>Behind the scenes with the top teams.</p>
            </div>
        </div>
    </section>

    <!-- Upcoming Events -->
    <section class="events">
        <h2>Upcoming Events</h2>
        <div class="event-item">
            <p><strong>Grand Prix</strong> - Abu Dhabi</p>
            <p>Date: December 3, 2024</p>
            <button>Buy Tickets</button>
        </div>
        <div class="event-item">
            <p><strong>Grand Prix</strong> - Bahrain</p>
            <p>Date: March 16, 2025</p>
            <button>Buy Tickets</button>
        </div>
        <div class="event-item">
            <p><strong>Grand Prix</strong> - Australia</p>
            <p>Date: March 31, 2025</p>
            <button>Buy Tickets</button>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <p>&copy; 2024 Formula 1 Clone. All rights reserved.</p>
        <div class="socials">
            <a href="#">Privacy Policy</a>
            <a href="#">Terms & Conditions</a>
            <a href="#">Contact Us</a>
        </div>
    </footer>
</body>
</html>

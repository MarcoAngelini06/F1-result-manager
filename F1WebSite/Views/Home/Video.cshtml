            { src: "video8.mp4", description: "Video 8: A peaceful forest." },
            { src: "video9.mp4", description: "Video 9: A mano d'acciaio" }
        ];

        // Seleziona il contenitore della galleria
        const galleryContainer = document.getElementById('videoGallery');

        // Aggiunge i video dinamicamente con le descrizioni
        videoData.forEach(({ src, description }) => {
            // Crea l'elemento video-item
            const videoItem = document.createElement('div');
            videoItem.className = 'video-item';

            // Crea l'elemento video
            const video = document.createElement('video');
            video.controls = true;
            video.innerHTML = `<source src="${src}" type="video/mp4">Your browser does not support the video tag.`;

            // Crea l'elemento per la descrizione
            const videoDescription = document.createElement('div');
            videoDescription.className = 'video-description';
            videoDescription.textContent = description;

            // Aggiungi il video e la descrizione al video-item
            videoItem.appendChild(video);
            videoItem.appendChild(videoDescription);

            // Aggiungi il video-item alla galleria
            galleryContainer.appendChild(videoItem);
        });

        }

        /* BORDI "Must See" */
        .MustSeeBorder {
            border: solid;
            border-width: 10px;
            border-radius: 15px;
            border-color: red;
            border-left-color: transparent;
            border-bottom-left-radius: 0;
            border-top-left-radius: 0;
            padding: 15px;
        }

        /* VIDEO BORDI */
        .VideoBorder {
            border: solid;
            border-color: dimgrey;
            border-left-color: transparent;
            border-top-color: transparent;
            border-width: 2px;
            border-bottom-right-radius: 15px;
            padding: 30px;
            padding-top: 15px;
            transition: all 0.3s ease; /* Transizione per animazione */
        }

            /* Hover: cambia bordo a rosso */
            .VideoBorder:hover {
                border-color: red !important;
                border-left-color: transparent !important;
                border-top-color: transparent !important;
                background-color: #1f2833; /* Colore di sfondo opzionale per hover */
            }

